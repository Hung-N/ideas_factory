<div class="container">
  <h1> Log In </h1>


    <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, '', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password  %>
      <%= password_field_tag :password, '', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Sign in', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>

</div>
