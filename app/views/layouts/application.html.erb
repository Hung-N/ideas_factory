<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <%= link_to 'Idea Factory', home_path %>
      |
      <%= link_to 'All Ideas', ideas_path %>
      |
      <%= link_to 'Submit New Idea', new_idea_path %>
      |
      <% if user_signed_in? %>
        <span style='color: red;' class="pull-right"> - Currently logged in as: <%= current_user.email %> - <%= link_to 'Log out', sessions_path, method: :delete %></span>
      <% else %>

        <%= link_to 'Log In', new_session_path %>
        |
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>

